# Dockerfile for Chargebee MCP Service
FROM python:3.11-slim
WORKDIR /app

# Copy project structure and install dependencies
COPY pyproject.toml .
COPY src ./src
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install -e .

# The app is now run as an installed package
CMD ["uvicorn", "mcp_servers.chargebee.main:app", "--host", "0.0.0.0", "--port", "8083"]
